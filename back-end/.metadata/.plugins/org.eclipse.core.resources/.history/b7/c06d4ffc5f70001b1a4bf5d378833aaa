<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.example.demo.mapper.UserMapper">
 	
 	<insert id="insertUser" parameterType="com.example.demo.vo.UserVO">
 		INSERT INTO users (id,pw,name,email,auth,cod) VALUES
                          (#{id},#{pw},#{name},#{email},#{auth},#{cod})
 	</insert>
 	
 	  <select id="fetchUserByID" resultType="com.example.demo.vo.UserVO"
      parameterType="string">
         SELECT * FROM users
         WHERE id = #{id}
     </select>
     
     <select id="userAuthList" resultType="com.example.demo.vo.UserVO"
      parameterType="string">
		SELECT * FROM users
		WHERE auth=#{auth}
	</select>
	
	 <select id="StudentList" resultType="com.example.demo.vo.UserVO"
      parameterType="HashMap">
		SELECT * FROM users
		WHERE auth=#{auth} and cod=#{cod};\
	</select>
     
     <delete id="deleteUser" parameterType="string">
         DELETE FROM users
         WHERE id = #{id}
     </delete>
     
     <update id="updateUser" parameterType="com.example.demo.vo.UserVO">
         UPDATE users
         SET id=#{id},name=#{name},email=#{email}, ban=#{ban}, auth=#{auth},pw=#{pw}
         WHERE id = #{id}
     </update>
 </mapper>